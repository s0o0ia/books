<div class="product-grids">
	<div class="container">
	<div class="product-top">
	{{#if offers}}
      {{#each offers}}
      <div class="col-lg-4 d-flex ftco-animate">
        <div class="services-wrap d-flex">
          <a href="/offer-{{this.id}}" class="img" style="background-image: url('{{this.image}}');"></a>
          <div class="text p-4">
            <h3>{{this.title}}</h3>
            <p style="    overflow: hidden;display: block;max-height: 85px;width: 100%;">
              {{this.description}}</p>
            <p class="price"><span>${{this.price}}</span> <a href="#"
                class="ml-2 btn btn-white btn-outline-white">Order</a></p>
          </div>
        </div>
      </div>
      {{/each}}
      {{/if}}
	<div class="clearfix"> </div>
	</div>
	</div>
</div>
